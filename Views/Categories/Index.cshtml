@model IEnumerable<BabyStore.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Categorias</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn btn-sm" })
    </p>
}

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="active">
                @Html.ActionLink(item.Name, "Index", "Products", new { category = item.Name }, new { @class = "text-info" })
            </td>
            <td>
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-default btn-sm" })
                   @Html.Raw(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                }


            </td>
        </tr>
    }

</table>
